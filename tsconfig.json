{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@logger": [
                "util/log"
            ],
            "@util/*": [
                "util/*"
            ],
            "@caboose/server": [
                "CabooseServer"
            ],
            "@caboose/managers": [
                "managers/index"
            ],
            "@caboose/events": [
                "events/index"
            ],
            "@caboose/types": [
                "types/index"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}